<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_alignParentBottom="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rincian"
            android:text="@string/rincian"
            android:layout_below="@+id/nominal"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/komentar"
            android:id="@+id/komentar"
            android:layout_below="@+id/nominal"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/foto_profil"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Rahmat Wijayanto"
            android:gravity="center_vertical"
            android:id="@+id/nama"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/foto_profil"
            android:layout_above="@+id/jabatan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketua bidang sosial budaya"
            android:gravity="center_vertical"
            android:id="@+id/jabatan"
            android:layout_alignBottom="@+id/foto_profil"
            android:layout_toEndOf="@+id/foto_profil" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/nota"
            android:layout_below="@+id/foto_profil"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.000.000"
            android:gravity="center_vertical"
            android:id="@+id/nominal"
            android:layout_below="@+id/nota"
            android:layout_alignBottom="@+id/tanda"
            android:layout_alignEnd="@+id/komentar" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/tanda"
            android:layout_below="@+id/nota"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>